set -u

SELF=$(dirname $0)
if [[ $SELF = "." ]]; then
    TERLANG_HOME=$(pwd)
else
    TERLANG_HOME=$(pwd)/${SELF}
fi
ERL=erl
ERLC=erlc
EBIN=${TERLANG_HOME}/ebin
ERL_LIBS=${TERLANG_HOME}

function shell {
    ${ERL} -pa ${EBIN}
}

function terl {
    ${ERL} -pa ${EBIN} -user terl_init
}

function evaluate {
    [[ -z "$1" ]] && echo "No input given to eval" && exit 1

    ${ERL} \
        -hidden \
        -eval $1 -run init stop -noshell
}

function test {
    ${ERLC} \
		    -pa $EBIN -o $EBIN \
		    ${TERLANG_HOME}/test/type_check_SUITE.erl \
		    ${TERLANG_HOME}/test/run_test.erl

    ${ERL} \
        -pa ${EBIN} \
		    -noshell \
		    -s run_test run
}

while [[ $# -gt 0 ]]; do
    key="$1"

    case $key in
        shell)
            shell
            shift
            ;;
        terl)
            terl
            shift
            ;;
        test)
            test
            shift
            ;;
        eval)
            shift
            evaluate $1
            shift
            ;;
        *)
            # unknown option
            ;;
    esac
done
